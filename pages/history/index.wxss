page {
  background-color: #f5f5f5;
}

.wrap {
  width: 100%;
  height: 100vh;
}

.scroller-box {
  flex: 1;
  overflow: hidden;
}

.list-item-bottom {
  /* border-top: dashed 1rpx #ddd; */
  padding: 18rpx;
  text-align: right;
}

.list-item-bottom  button {
  margin-left: 20rpx;
}

.po {
  width: 690rpx;
  margin: 30rpx 0 0 30rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  position: relative;
  box-sizing: border-box;
  padding: 16rpx 20rpx;
}

.po-text1 {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  font-weight: bold;
}

.po-text2 {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 40rpx;
}

.ap-item {
  width: 690rpx;
  margin: 24rpx 0 0 30rpx;
  box-sizing: border-box;
  padding: 24rpx;
  border-radius: 20rpx;
  background: #fff;
  display: flex;
}

.ap-item-cover {
  flex: none;
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  display: block;
  background: #ccc;
}

.ap-item-right {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  align-items: center;
  /* justify-content: center; */
  /* flex-direction: column; */
}

.ap-item-name {
  flex: 1;
  font-size: 28rpx;
  line-height: 36rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  color: #333;
}

.ap-item-btns {
  flex: none;
  /* margin-top: 12rpx; */
  margin-left: auto;
  --td-button-small-height: 60rpx;
}

.ap-item-btns-chunk {
  width: 140rpx!important;
  margin-left: 12rpx!important;
}