.congrats-page {
  display: flex;
  flex-direction: column;
}

.congrats-page .congrats-content-wrap {
  padding: 42rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

.congrats-page .congrats-content-wrap .user-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  width: 100%;
}

.congrats-page .congrats-content-wrap .user-info .nickname-wrap {
  font-size: 44rpx;
  font-weight: normal;
  line-height: normal;
  letter-spacing: 0px;
  color: #19191a;
}

.congrats-page .congrats-content-wrap .user-info .avatar-wrap {
  margin: 0;
  padding: 0;

  width: 128rpx;
  height: 128rpx;
  display: inline-flex;
  box-sizing: border-box;
  border-radius: 50%;
  overflow: hidden;
}

.congrats-page .congrats-content-wrap .congratulation-wrap {
  width: 666rpx;
  height: 285rpx;
  position: relative;
}

.congrats-page
  .congrats-content-wrap
  .congratulation-wrap
  .congratulation-bg-wrap {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.congrats-page
  .congrats-content-wrap
  .congratulation-wrap
  .congratulation-input-wrap {
  padding: 18rpx 30rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  gap: 26rpx;
}

.congratulation-input-wrap .say-something {
  display: flex;
  gap: 4rpx;
  position: relative;
}

.congratulation-input-wrap .say-something .input-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.congratulation-input-wrap .say-something .say-icon {
  width: 64rpx;
  height: 64rpx;
  flex-shrink: 0;
}

.congratulation-input-wrap .say-something .say-input {
  flex-grow: 1;
  font-size: 32rpx;
  font-weight: normal;
  line-height: normal;
  color: #979797;
  padding: 9rpx 16rpx;
  border-bottom: 2rpx dashed rgba(216, 216, 216, 0.8);
}

.congratulation-input-wrap .to-gao {
  font-size: 40rpx;
  font-weight: 400;
  line-height: normal;
  color: #000000;
}

.congratulation-input-wrap .to-gao .em {
  font-weight: 600;
  color: #0256ff;
}

.other-congratulations {
  width: 100%;
  margin-top: 56rpx;
  padding: 0 24rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 20rpx;
}

.other-congratulations .other-congratulations-title {
  font-size: 36rpx;
  font-weight: 600;
  line-height: normal;
  color: #0256ff;
}

.other-congratulations .stripe-wrap {
  width: 100%;
  height: 77rpx;
  position: relative;
}

.other-congratulations .stripe-wrap .stripe-img-wrap {
  position: absolute;
  left: 30%;
  top: 0;
  transform: translateX(-50%);
  width: 1369rpx;
  height: 77rpx;
}

.other-congratulations .other-congratulations-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.other-congratulations
  .other-congratulations-list
  .other-congratulations-list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.other-congratulations-list-item .avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  overflow: hidden;
}

.other-congratulations-list-item .bubble {
  height: 96rpx;
  padding: 17rpx 96rpx 17rpx 58rpx;
  position: relative;
}

.other-congratulations-list-item .bubble .bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.other-congratulations-list-item .bubble text {
  font-size: 28rpx;
  font-weight: normal;
  line-height: normal;
}

.congrats-page .check-in {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 24rpx;
  padding: 88rpx 0;
}

.congrats-page .check-in .scan-entry-wrap {
  width: 340rpx;
  height: 140rpx;
}

.congrats-page .check-in text {
  font-size: 36rpx;
  font-weight: 600;
  line-height: normal;
  text-align: center;
  letter-spacing: 0px;
  color: #3d3d3d;
}
