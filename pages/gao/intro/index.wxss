.intro-page {
  display: flex;
  flex-direction: column;
}

.intro-page .intro-content-wrap {
  padding: 80rpx 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  gap: 20rpx;
  position: relative;
}

.intro-page .intro-content-wrap .card-container {
  width: 85%;
  margin: 0 auto;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.intro-page .intro-content-wrap .banner-wrap {
  width: 100%;
  height: 600rpx;
  overflow: hidden;
}

.intro-page .intro-content-wrap .banner-wrap image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.intro-page .intro-content-wrap .description-wrap {
  padding: 25rpx 35rpx;
  font-size: 26rpx;
  font-weight: 500;
  line-height: 48rpx;
  text-align: center;
  letter-spacing: 0px;
  color: #19191a;
  width: 100%;
  box-sizing: border-box;
}

.intro-page .intro-content-wrap .enter-wrap {
  width: 100%;
  margin-top: 80rpx;
  padding: 0 47rpx;
  height: 250rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.intro-page .intro-content-wrap .enter-wrap .header {
  text-align: center;
  padding: 0;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.intro-page .intro-content-wrap .enter-wrap .btn {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  background-color: #000000;
  color: #ffffff;
  border: 4rpx solid #000000;
  border-radius: 100%;
  font-size: 22rpx;
  font-weight: 700;
  text-align: center;
  text-transform: uppercase;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.intro-page .intro-content-wrap .enter-wrap .btn:after {
  content: '';
  width: 100%;
  height: 100%;
  border: 2rpx solid #000000;
  border-radius: 100%;
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  animation: pulse 2s linear infinite;
}

.intro-page .intro-content-wrap .enter-wrap .btn text {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
  letter-spacing: 2rpx;
}

.intro-page .intro-content-wrap .enter-wrap .arrow-right {
  display: flex;
  align-items: center;
}

.intro-page .intro-content-wrap .enter-wrap .btn-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.intro-page .intro-content-wrap .enter-wrap .arrow-icon {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

@keyframes pulse {
  0% {
    opacity: 0;
    transform: scale(1);
  }

  50% {
    opacity: 1;
    transform: scale(1.1);
  }

  100% {
    opacity: 0;
    transform: scale(1.2);
  }
}
