<view class="gao-page intro-page">
  <page-bg />
  <nav-bar text="{{collectionName}}" back="{{false}}" />
  <mp-toptips msg="{{errorMessage}}" type="error" show="{{errorMessage}}"></mp-toptips>
  <view class="intro-content-wrap">
    <view class="card-container">
    <view class="banner-wrap">
      <image src="{{coverImgUrl}}" mode="aspectFill" bindtap="onBannerTap" />
    </view>
    <view class="description-wrap">{{description}}</view>
    </view>
    <view class="enter-wrap" bindtap="gotoCongratsPage">
      <image src="/assets/gao/watchar.png" mode="aspectFit" />

      <!-- <view class="text-wrap">
        <text>点击祝贺</text>
      </view> -->
    </view>
  </view>
</view>
