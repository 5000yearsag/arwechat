.debug-collections-page {
  background: #f5f5f5;
  min-height: 100vh;
}

.loading-wrap {
  padding: 100rpx 0;
  text-align: center;
  color: #666;
  font-size: 28rpx;
}

.empty-wrap {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.collections-scroll {
  height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

.collections-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.collection-card {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 12rpx;
  padding: 16rpx;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
}

.collection-card:active {
  transform: scale(0.98);
  background: #f8f8f8;
}

.card-cover {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 16rpx;
  background: #f0f0f0;
  flex-shrink: 0;
}

.card-cover image {
  width: 100%;
  height: 100%;
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  min-width: 0;
}

.card-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-uuid {
  font-size: 22rpx;
  color: #666;
  font-family: monospace;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.load-more {
  padding: 30rpx 0;
  text-align: center;
  color: #666;
  font-size: 26rpx;
}

.no-more {
  padding: 20rpx 0;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}